<div style="display:inline">
<%= link_to rant.rant, user_rant_path(rant.user_id, rant.id), class: 'hate' %>
  <div><%= rant.favorites_count %> -
<% unless favorited?(rant) %>
 <%= link_to "Favorite", user_rant_favorites_path(user.id, rant.id), method: :post %>
<% else %>
  <%= link_to "Unfavorite", user_rant_favorite_path(user_id: user.id, rant_id: rant.id, id: @favorite.id), method: :delete %></div>
<% end %>
<%= form_for [@user, rant, @comment] do |f| %>
  <% f.object.errors.full_messages.each do |error| %>
    <div class="errors"><%= error %></div>
  <% end %>
  <%= f.text_field :comment, autofocus: true %>
<%= f.submit "COMMENT" %>
<% end %>
</div>
