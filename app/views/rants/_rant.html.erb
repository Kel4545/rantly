
<% rants.each do |rant| %>
  <div class="rant_blurb">
    <div class="photo">
  <%= link_to(rant.user.username, user_rant_path(rant.user_id, rant.id)) %>
    <%= image_tag rant.user.avatar.url(:thumb), class: 'kittens' %>
         <% unless check_follow(@user) %>
           <%= link_to "Follow", user_follows_path(@user), method: :post, class: 'follow' %>
         <% else %>
           <%= link_to "Unfollow", user_follow_path(user_id: @user, id: @follow), method: :delete, class: 'follow' %>
         <% end %>
         </div>
        <div style="display:inline; position: relative">
      <%= link_to rant.rant, user_rant_path(rant.user_id, rant.id), class: 'hate' %>
        </div>
  <%= rant.favorites_count %> -
    <% unless favorited?(rant) %>
      <%= link_to "Favorite", user_rant_favorites_path(@user.id, rant.id), method: :post %>
    <% else %>
      <%= link_to "Unfavorite", user_rant_favorite_path(@user.id, rant_id: rant.id, id: @favorite.id), method: :delete %>
    <% end %>
   <div style="float:right"><%= form_for [@user, rant, @comment] do |f| %>
      <% f.object.errors.full_messages.each do |error| %>
        <div class="errors"><%= error %></div>
      <% end %>
      <%= f.text_field :comment, autofocus: true %>
      <%= f.submit "COMMENT" %></div>
  <% end %>
    <hr>
</div>
<% end %>
