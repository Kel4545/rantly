<aside class="aside">
<%= form_for @user, url: signin_path do |f| %>
  <h2>Login</h2>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br>
  <div>
    <%= f.submit "Login", :class => 'register_button' %>
<% end %>
</div>
</aside>