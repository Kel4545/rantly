<% form_for @user, url: registrations_path, html: { class: "registration-form"} do |f| %>
  <h1>Register</h1>
  <ul>
  <%= f. label :username %>
  <%= f. text_field :username, autofocus: true %>
  <%= f. label :firstname %>
  <%= f. text_field :firstname, autofocus: true %>
  <%= f. label :lastname %>
  <%= f. text_field :lastname, autofocus: true %>
  <%= f. label :password %>
  <%= f. password_field :password, autofocus: true %>
  <%= f. label :bio %>
  <%= f. text_field :bio, autofocus: true %>
  <%= f.submit "Register" %>
  </ul>
  <% end %>