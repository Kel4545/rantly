<div class="rants">
  <h1> Latest Rants</h1>
  <% other_users.each do |user| %>
    <%= user.firstname %>
    <% user.rants.each do |rant| %>
      <%= link_to rant.rant, user_rant_path(rant.user_id, rant.id), :class => "link" %>
      <br>
      <%= link_to "Follow", :class => "link" %>
      <br>
      <br>
      <%= link_to "Delete", user_rant_path(rant.user_id, rant.id), :class => "delete", :method => :delete %>
    <% end %>
    <h1> My Rants</h1>
    <% current_user.rants.each do |rant| %>
      <li><%= link_to rant.rant, :class => "link" %></li> <%= link_to "Delete", user_rant_path(rant.user_id, rant.id), :class => "delete", :method => :delete %>
    <% end %>
  <% end %>
</div>


