<h1 style="text-align: center"> Latest Rants</h1>
  <hr>
    <% other_users.each do |user| %>
      <h4><%= link_to user.firstname, user_rants_path(user.id) %></h4>
      <% user.rants.each do |rant| %>
        <%= link_to rant.rant, user_rant_path(rant.user_id, rant.id) %> <%= link_to "Favorite" %>
   <% end %>
      <% end %>
    <% if follow %>
      <%= link_to "Follow", :method => :post %>
    <% else %>
      <%= link_to "Unfollow", :method => :delete %>
    <% end %>
<hr>
<h1 style="text-align: center"> My Rants</h1>
<% current_user.rants.each do |rant| %>
<li><%= link_to rant.rant, user_rant_path(rant.user_id, rant.id) %></li> <%= link_to "Delete", user_rant_path(rant.user_id, rant.id), :class => "delete", :method => :delete %>
<% end %>
